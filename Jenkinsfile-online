        APP_NAME = 'devops-java-sample'
        SONAR_CREDENTIAL_ID = 'sonar-token'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        
        stage('Test') {
            steps {
                echo "Testing..."
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Deploying..."
            }
        }
    }
}
